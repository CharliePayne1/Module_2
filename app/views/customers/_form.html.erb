<h1>Customer Details</h1>
<%= form_for @customer do |f| %>
<%= f.label :first_name %>
<%= f.text_field :first_name %>
<br>
<br>
<%= f.label :last_name %>
<%= f.text_field :last_name %>
<br>
<br>
<%= f.label :age %>
<%= f.number_field :age %>
<br>
<br>
<%= f.label :occupation %>
<%= f.number_field :occupation %>
<br>
<br>
<%= f.submit %>
<%end%>